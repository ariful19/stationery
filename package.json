{
  "name": "stationery",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @stationery/api dev\" \"pnpm --filter @stationery/web dev\"",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "e2e": "node ./scripts/prepare-playwright-report.mjs && pnpm -r --workspace-concurrency=1 run e2e",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "postinstall": "pnpm --filter @stationery/shared build",
    "predev": "pnpm --filter @stationery/shared build",
    "prebuild": "pnpm --filter @stationery/shared build",
    "pretest": "pnpm --filter @stationery/shared build",
    "pree2e": "pnpm --filter @stationery/shared build",
    "format:check": "pnpm -r run format:check",
    "db:push": "pnpm --filter @stationery/api db:push",
    "seed": "pnpm --filter @stationery/api db:seed",
    "seed:faker": "pnpm --filter @stationery/api db:seed:faker",
    "hooks:install": "./scripts/setup-pre-commit.sh"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-lit": "1.11.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "vitest": "1.5.2",
    "@playwright/test": "1.43.1",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@typescript-eslint/parser": "7.7.1"
  }
}
