{
  "name": "@stationery/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "start:e2e": "pnpm build && pnpm start",
    "pretest": "pnpm --filter @stationery/shared build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:push": "drizzle-kit push --config drizzle.config.ts && tsx src/db/ensure-ledger-view.ts",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.1.0",
    "@stationery/shared": "workspace:*",
    "better-sqlite3": "9.4.5",
    "drizzle-orm": "0.30.10",
    "express": "4.19.2",
    "puppeteer": "^22.15.0",
    "swagger-ui-express": "5.0.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "1.5.2",
    "@playwright/test": "^1.43.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "4.17.21",
    "@types/node": "^20.12.7",
    "dotenv": "16.4.5",
    "drizzle-kit": "0.21.4",
    "supertest": "7.0.0",
    "tsx": "4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.2"
  }
}
