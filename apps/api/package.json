  "dependencies": {
    "@stationery/shared": "workspace:*",
    "better-sqlite3": "9.4.5",
    "drizzle-orm": "0.30.10",
    "express": "4.19.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@types/express": "4.17.21",
    "@types/node": "^20.12.7",
    "supertest": "7.0.0",
    "tsx": "4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.2",
    "drizzle-kit": "0.21.4",
    "@types/better-sqlite3": "^7.6.8"
  }
